<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/home_screen_theme"
        android:orientation="vertical"
        tools:context=".ui.home.HomeFragment"
        android:id="@+id/home_fragment_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:text="Welcome,"
                android:textColor="@color/home_main_text_color"
                android:textSize="45dp"
                android:textStyle="bold"
                android:elevation="3dp"/>

            <TextView
                android:id="@+id/home_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="User"
                android:textColor="@color/home_main_text_color"
                android:textSize="35dp"
                android:textStyle="bold"
                android:elevation="3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:textStyle="bold"
                    android:textColor="@color/home_third_text_color"
                    android:textSize="20dp"
                    android:elevation="3dp"/>
                <TextClock
                    android:id="@+id/textClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:format24Hour="hh:mm"
                    android:textColor="@color/home_third_text_color"
                    android:textSize="20dp"
                    android:elevation="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="382dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/getStartedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textSize="30dp"
                    android:textColor="@color/home_main_text_color"
                    android:textStyle="bold"
                    android:elevation="3dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_vertical"
                    style="@style/home_arrow_theme"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/home_review_button"
                    style="@style/home_button_browse_theme"
                    android:layout_width="165dp"
                    android:layout_height="90dp"
                    android:text="Review"
                    android:textColor="@color/home_secondary_text_color"
                    android:elevation="5dp"
                    android:backgroundTint="@color/home_button_background"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <Button
                    android:id="@+id/home_add_facility_button"
                    style="@style/home_button_add_theme"
                    android:layout_width="165dp"
                    android:layout_height="90dp"
                    android:text="Add Facility"
                    android:textColor="@color/home_secondary_text_color"
                    android:elevation="5dp"
                    android:backgroundTint="@color/home_button_background"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <Button
                    android:id="@+id/home_chatbot_button"
                    style="@style/home_button_chat_theme"
                    android:layout_width="165dp"
                    android:layout_height="90dp"
                    android:text="ChatBot"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:textColor="@color/home_secondary_text_color"
                    android:backgroundTint="@color/home_button_background"
                    app:layout_constraintTop_toBottomOf="@+id/home_review_button"
                    app:layout_constraintStart_toStartOf="parent"/>
                <Button
                    android:id="@+id/home_settings_button"
                    android:layout_width="165dp"
                    android:layout_height="90dp"
                    android:text="Settings"
                    android:textColor="@color/home_secondary_text_color"
                    android:backgroundTint="@color/home_button_background"
                    android:gravity="center"
                    android:elevation="5dp"
                    style="@style/home_button_settings_theme"
                    app:layout_constraintTop_toBottomOf="@+id/home_add_facility_button"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="end"
                android:text="Artwork: Cliff Walk at Pourville by Claude Monet"
                android:textColor="@color/home_secondary_text_color"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
